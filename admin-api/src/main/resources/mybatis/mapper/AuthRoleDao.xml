<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.lmxdawn.api.admin.dao.auth.AuthRoleDao" >

    <select id="listAdminPage" parameterType="hashmap" resultType="com.lmxdawn.api.admin.entity.auth.AuthRole">
        SELECT id,name,status,remark,create_time,listorder
        FROM auth_role
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="name != null and '' != name">
                AND `name` LIKE CONCAT(#{name},'%')
            </if>
        </where>
    </select>

    <select id="listAuthAdminRolePage" parameterType="hashmap" resultType="com.lmxdawn.api.admin.entity.auth.AuthRole">
        SELECT id,name
        FROM auth_role
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>

</mapper>